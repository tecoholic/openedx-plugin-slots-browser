---
import SearchBar from '../components/SearchBar.astro';
import Sidebar from '../components/Sidebar.astro';
import { Icon } from 'astro-icon/components';

export interface Props {
  title: string;
  showSidebar?: boolean;
  currentMfeId?: string;
  currentSlotId?: string;
  currentEventId?: string;
  showEvents?: boolean;
  lastUpdated?: string;
}

const { title, showSidebar = false, currentMfeId, currentSlotId, currentEventId, showEvents = false, lastUpdated } = Astro.props;
const formattedLastUpdated = lastUpdated
  ? new Date(lastUpdated).toLocaleString(undefined, {
      year: 'numeric',
      month: 'short',
      day: '2-digit',
      hour: '2-digit',
      minute: '2-digit',
    })
  : null;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Open edX Plugins Browser</title>
    <style is:global>
      :root {
        --color-primary: #0066cc;
        --color-primary-darker: #00458a;
        --color-secondary: #f0f0f0;
        --color-text: #333;
        --color-border: #ddd;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen,
          Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        color: var(--color-text);
        line-height: 1.6;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }

      header {
        background: white;
        border-bottom: 1px solid var(--color-border);
        padding: 1rem 0;
        position: sticky;
        top: 0;
        z-index: 100;
      }

      nav {
        max-width: 100%;
        margin: 0 auto;
        padding: 0 2rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 2rem;
      }

      nav > a {
        white-space: nowrap;
        flex-shrink: 0;
      }

      .nav-brand {
        display: flex;
        align-items: center;
      }

      .nav-brand strong {
        display: inline-flex;
        align-items: center;
        gap: 0.6rem;
        line-height: 1.1;
      }

      .nav-brand-icon {
        width: 2.25rem;
        height: 2.25rem;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        background-color: #e7f1ff;
        border: 2px solid var(--color-primary);
        color: var(--color-primary);
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
        flex-shrink: 0;
      }

      .nav-center {
        flex: 1;
        min-width: 250px;
        max-width: 500px;
      }
      .nav-right {
        display: flex;
        gap: 1rem;
        flex-shrink: 0;
      }

      nav a {
        color: var(--color-primary);
        text-decoration: none;
      }

      nav a:hover {
        text-decoration: none;
        color: var(--color-primary-darker);
      }

      .nav-brand-icon :global(svg) {
        display: block;
        width: 1.3em;
        height: 1.3em;
      }

      .content-wrapper {
        display: flex;
        flex: 1;
        min-height: 0;
      }

      main {
        flex: 1;
        padding: 2rem;
        max-width: 100%;
      }

      h1 {
        margin-bottom: 1rem;
        font-size: 2.5rem;
      }

      h2 {
        margin-top: 2rem;
        margin-bottom: 1rem;
        font-size: 1.8rem;
      }

      h3 {
        margin-top: 1.5rem;
        margin-bottom: 0.5rem;
        font-size: 1.3rem;
      }

      a {
        color: var(--color-primary);
      }

      a:hover {
        text-decoration: underline;
      }

      footer {
        background: var(--color-secondary);
        padding: 2rem;
        margin-top: auto;
        text-align: center;
        font-size: 0.9rem;
        color: #666;
        grid-column: 1 / -1;
        left: 0;
        right: 0;
        bottom: 0;
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
      }

      @media (max-width: 768px) {
        nav {
          padding: 0 1rem;
        }

        main {
          padding: 1.5rem;
        }
      }

      @media (max-width: 786px) {
          .nav-center {
              display: none;
          }
      }
    </style>
  </head>
  <body>
    <header>
      <nav>
        <a href="/openedx-plugin-slots-browser/" class="nav-brand">
          <strong>
            <span class="nav-brand-icon">
              <Icon name="tabler:plug" width="1.25rem" height="1.25rem" />
            </span>
            Open edX Plugins Slots
          </strong>
        </a>
        <div class="nav-center">
          <SearchBar />
        </div>
        <div class="nav-right">
          <a href="/openedx-plugin-slots-browser/mfes">Plugin Slots</a>
          <a href="/openedx-plugin-slots-browser/filters">Filters</a>
          <a href="/openedx-plugin-slots-browser/about">About</a>
        </div>
      </nav>
    </header>
    <div class="content-wrapper">
      {showSidebar && <Sidebar currentMfeId={currentMfeId} currentSlotId={currentSlotId} currentEventId={currentEventId} showEvents={showEvents} />}
      <main class={showSidebar ? 'with-sidebar' : ''}>
        <slot />
      </main>
    </div>
    <footer>
      <p>
        Open edX Plugins Browser â€” Auto-updating catalog of frontend plugin slots
      </p>
      {formattedLastUpdated && (
        <p>
          <small>
            Last updated: <time>{formattedLastUpdated}</time>
          </small>
        </p>
      )}
    </footer>
  </body>
</html>
