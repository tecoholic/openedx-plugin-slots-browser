---
import SearchBar from '../components/SearchBar.astro';
import Sidebar from '../components/Sidebar.astro';
import { Icon } from 'astro-icon/components';
import { releaseOptions } from '../lib/release-config';
import { withBasePath } from '../lib/paths';

export interface Props {
  title: string;
  basePath: string;
  release: string;
  pluginData: { pluginSlots: any[]; mfes: any[] };
  filtersData: { filters: any[] };
  eventsData: { events: any[] };
  showSidebar?: boolean;
  currentMfeId?: string;
  currentSlotId?: string;
  currentEventId?: string;
  currentFilterId?: string;
  showEvents?: boolean;
  showFilters?: boolean;
  lastUpdated?: string;
}

const {
  title,
  basePath,
  release,
  pluginData,
  filtersData,
  eventsData,
  showSidebar = false,
  currentMfeId,
  currentSlotId,
  currentEventId,
  currentFilterId,
  showEvents = false,
  showFilters = false,
  lastUpdated,
} = Astro.props as Props;
const formattedLastUpdated = lastUpdated
  ? new Date(lastUpdated).toLocaleString(undefined, {
      year: 'numeric',
      month: 'short',
      day: '2-digit',
      hour: '2-digit',
      minute: '2-digit',
    })
  : null;

const normalizedBasePath = basePath.endsWith('/') ? basePath.slice(0, -1) : basePath;
const currentPath = Astro.url.pathname;
const pathSuffix = currentPath.startsWith(normalizedBasePath)
  ? currentPath.slice(normalizedBasePath.length) || '/'
  : '/';
const normalizedSuffix = pathSuffix.startsWith('/') ? pathSuffix : `/${pathSuffix}`;
const releaseLinks = releaseOptions.map((option) => {
  const optionBase = option.basePath.endsWith('/') ? option.basePath.slice(0, -1) : option.basePath;
  const targetPath = normalizedSuffix === '/' ? optionBase : `${optionBase}${normalizedSuffix}`;
  return { ...option, targetPath };
});
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Open edX Plugins System Catalog</title>
    <style is:global>
      :root {
        --color-primary: #0066cc;
        --color-primary-darker: #00458a;
        --color-secondary: #f0f0f0;
        --color-text: #333;
        --color-border: #ddd;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen,
          Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        color: var(--color-text);
        line-height: 1.6;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }

      header {
        background: white;
        border-bottom: 1px solid var(--color-border);
        padding: 1rem 0;
        position: sticky;
        top: 0;
        z-index: 100;
      }

      nav {
        max-width: 100%;
        margin: 0 auto;
        padding: 0 2rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 2rem;
      }

      .nav-left {
        display: flex;
        align-items: center;
        gap: 1rem;
        flex-shrink: 0;
        min-width: 0;
      }

      .nav-brand {
        display: flex;
        align-items: center;
        white-space: nowrap;
        flex-shrink: 0;
      }

      .nav-brand strong {
        display: inline-flex;
        align-items: center;
        gap: 0.6rem;
        line-height: 1.1;
      }

      .nav-brand-icon {
        width: 2.25rem;
        height: 2.25rem;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        background-color: #e7f1ff;
        border: 2px solid var(--color-primary);
        color: var(--color-primary);
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
        flex-shrink: 0;
      }

      .nav-center {
        flex: 1;
        min-width: 250px;
        max-width: 500px;
      }
      .nav-right {
        display: flex;
        gap: 1rem;
        flex-shrink: 0;
      }

      .release-switcher {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.35rem 0.6rem;
        border: 1px solid var(--color-border);
        border-radius: 999px;
        background: #f7f9ff;
        color: #1d3b70;
        font-size: 0.85rem;
        font-weight: 600;
        white-space: nowrap;
      }

      .release-switcher label {
        text-transform: uppercase;
        letter-spacing: 0.04em;
        font-size: 0.7rem;
        padding-right: 0.5rem;
        border-right: 1px solid var(--color-primary-darker);
      }

      .release-select {
        border: none;
        background: transparent;
        font: inherit;
        font-size: 0.85rem;
        font-weight: 600;
        padding-right: 0.75rem;
        cursor: pointer;
        appearance: none;
        background-image: linear-gradient(45deg, transparent 50%, #1d3b70 50%),
          linear-gradient(135deg, #1d3b70 50%, transparent 50%);
        background-position: calc(100% - 12px) calc(50%),
          calc(100% - 7px) calc(50%);
        background-size: 5px 5px, 5px 5px;
        background-repeat: no-repeat;
      }

      .release-select:focus {
        outline: none;
      }

      nav a {
        color: var(--color-primary);
        text-decoration: none;
      }

      nav a:hover {
        text-decoration: none;
        color: var(--color-primary-darker);
      }

      .nav-link-with-icon {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        white-space: nowrap;
        padding: 0.5rem;
        border-radius: 0.5rem;
      }

      .nav-link-with-icon:hover {
          background-color: #f3f5fd;
      }

      .nav-link-with-icon :global(svg) {
        width: 1.1em;
        height: 1.1em;
        display: inline;
      }

      .nav-brand-icon :global(svg) {
        display: block;
        width: 1.3em;
        height: 1.3em;
      }

      .content-wrapper {
        display: flex;
        flex: 1;
        min-height: 0;
      }

      main {
        flex: 1;
        padding: 2rem;
        max-width: 100%;
      }

      h1 {
        margin-bottom: 1rem;
        font-size: 2.5rem;
      }

      h2 {
        margin-top: 2rem;
        margin-bottom: 1rem;
        font-size: 1.8rem;
      }

      h3 {
        margin-top: 1.5rem;
        margin-bottom: 0.5rem;
        font-size: 1.3rem;
      }

      a {
        color: var(--color-primary);
      }

      a:hover {
        text-decoration: underline;
      }

      footer {
        background: var(--color-secondary);
        padding: 2rem;
        margin-top: auto;
        text-align: center;
        font-size: 0.9rem;
        color: #666;
        grid-column: 1 / -1;
        left: 0;
        right: 0;
        bottom: 0;
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
      }

      @media (max-width: 768px) {
        nav {
          padding: 0 1rem;
        }

        main {
          padding: 1.5rem;
        }
      }

      @media (max-width: 786px) {
          .nav-center {
              display: none;
          }
      }

      @media (max-width: 720px) {
        .release-switcher label {
          display: none;
        }
      }
    </style>
  </head>
  <body>
    <header>
      <nav>
        <div class="nav-left">
          <a href={withBasePath(basePath, '/')} class="nav-brand">
            <strong>
              <span class="nav-brand-icon">
                <Icon name="tabler:plug" width="1.25rem" height="1.25rem" />
              </span>
              Open edX Plugins System Catalog
            </strong>
          </a>
          <div class="release-switcher">
            <label for="release-select">Release</label>
            <select
              id="release-select"
              class="release-select"
              aria-label="Select release"
              onchange="window.location.href = this.value"
            >
              {releaseLinks.map((option) => (
                <option value={option.targetPath} selected={option.slug === release}>
                  {option.label}
                </option>
              ))}
            </select>
          </div>
        </div>
        <div class="nav-center">
          <SearchBar
            pluginData={pluginData}
            filtersData={filtersData}
            eventsData={eventsData}
            basePath={basePath}
          />
        </div>
        <div class="nav-right">
          <a href={withBasePath(basePath, '/mfes')} class="nav-link-with-icon">
            <Icon name="tabler:puzzle" width="1em" height="1em" is:inline />
            MFE Slots
          </a>
          <a href={withBasePath(basePath, '/filters')} class="nav-link-with-icon">
            <Icon name="tabler:filter-code" width="1em" height="1em" is:inline />
            Filters
          </a>
          <a href={withBasePath(basePath, '/events')} class="nav-link-with-icon">
            <Icon name="tabler:bell" width="1em" height="1em" is:inline />
            Events
          </a>
          <a href={withBasePath(basePath, '/about')} class="nav-link-with-icon">
            <Icon name="tabler:info-circle" width="1em" height="1em" />
            About
          </a>
        </div>
      </nav>
    </header>
    <div class="content-wrapper">
      {showSidebar && (
        <Sidebar
          pluginData={pluginData}
          filtersData={filtersData}
          eventsData={eventsData}
          basePath={basePath}
          currentMfeId={currentMfeId}
          currentSlotId={currentSlotId}
          currentEventId={currentEventId}
          currentFilterId={currentFilterId}
          showEvents={showEvents}
          showFilters={showFilters}
        />
      )}
      <main class={showSidebar ? 'with-sidebar' : ''}>
        <slot />
      </main>
    </div>
    <footer>
      <p>
        Open edX Plugins System Catalog â€” Auto-updating catalog of frontend plugin slots
      </p>
      {formattedLastUpdated && (
        <p>
          <small>
            Last updated: <time>{formattedLastUpdated}</time>
          </small>
        </p>
      )}
    </footer>
  </body>
</html>
