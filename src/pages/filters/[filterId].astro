---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import ArgumentsTable from '../../components/ArgumentsTable.astro';
import ReturnsTable from '../../components/ReturnsTable.astro';
import ExceptionsTable from '../../components/ExceptionsTable.astro';
import filtersData from '../../data/filters.json';

export function getStaticPaths() {
  return filtersData.filters.map((filter) => ({
    params: { filterId: filter.id },
    props: { filter },
  }));
}

const { filter } = Astro.props;
const lastUpdated = filtersData.lastUpdated;
---

<BaseLayout title={filter.name} lastUpdated={lastUpdated}>
  <Breadcrumbs
    items={[
      { label: 'Home', href: '/openedx-plugin-slots-browser/' },
      { label: 'Filters', href: '/openedx-plugin-slots-browser/filters/' },
      { label: filter.category, href: `/openedx-plugin-slots-browser/filters/#${filter.category}` },
      { label: filter.name, href: '#' },
    ]}
  />

  <div class="filter-detail">
    <div class="filter-header">
      <div>
        <h1>{filter.name}</h1>
        <p class="filter-type-full">{filter.filterType}</p>
        <span class="category-badge">{filter.category}</span>
      </div>
    </div>

    <div class="filter-description">
      <p>{filter.description}</p>
    </div>

    <div class="filter-meta">
      <div class="meta-section">
        <h3>Location</h3>
        <p>
          <a href={filter.sourceUrl} target="_blank" rel="noopener noreferrer">
            {filter.filePath}
          </a>
        </p>
        <p class="meta-repo">
          Repository:
          <a href={filter.repository} target="_blank" rel="noopener noreferrer">
            openedx-filters
          </a>
        </p>
      </div>

      {filter.trigger && (
        <div class="meta-section">
          <h3>Trigger Information</h3>
          <div class="trigger-info">
            <div class="trigger-item">
              <strong>Repository:</strong>
              <code>{filter.trigger.repository}</code>
            </div>
            <div class="trigger-item">
              <strong>Path:</strong>
              <code>{filter.trigger.path}</code>
            </div>
            <div class="trigger-item">
              <strong>Function:</strong>
              <code>{filter.trigger.function}</code>
            </div>
          </div>
        </div>
      )}
    </div>

    <ArgumentsTable arguments={filter.arguments} />
    <ReturnsTable returns={filter.returns} />
    <ExceptionsTable exceptions={filter.exceptions} />
  </div>
</BaseLayout>

<style>
  .filter-detail {
    max-width: 900px;
  }

  .filter-header {
    margin-bottom: 2rem;
  }

  .filter-header h1 {
    margin-bottom: 0.5rem;
    font-size: 2.5rem;
  }

  .filter-type-full {
    margin: 0.5rem 0;
    font-family: 'Monaco', 'Menlo', 'Courier New', monospace;
    background: #f5f5f5;
    padding: 0.75rem 1rem;
    border-radius: 4px;
    color: #333;
    word-break: break-all;
  }

  .category-badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: #e7f1ff;
    color: var(--color-primary);
    border-radius: 4px;
    font-weight: 600;
    font-size: 0.85rem;
  }

  .filter-description {
    background: #fafafa;
    border-left: 4px solid var(--color-primary);
    padding: 1.5rem;
    border-radius: 4px;
    margin-bottom: 2rem;
  }

  .filter-description p {
    margin: 0;
    font-size: 1rem;
    line-height: 1.6;
    color: #555;
  }

  .filter-meta {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .meta-section {
    border: 1px solid var(--color-border);
    border-radius: 6px;
    padding: 1.5rem;
    background: white;
  }

  .meta-section h3 {
    margin-top: 0;
    font-size: 1.1rem;
    margin-bottom: 1rem;
  }

  .meta-section p {
    margin: 0.5rem 0;
  }

  .meta-repo {
    font-size: 0.9rem;
    color: #666;
  }

  .trigger-info {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .trigger-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .trigger-item strong {
    font-size: 0.85rem;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .trigger-item code {
    background: #f5f5f5;
    padding: 0.5rem;
    border-radius: 3px;
    font-family: 'Monaco', 'Menlo', 'Courier New', monospace;
    font-size: 0.85rem;
    word-break: break-all;
  }

  a {
    color: var(--color-primary);
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .filter-header h1 {
      font-size: 2rem;
    }

    .filter-meta {
      grid-template-columns: 1fr;
    }

    .meta-section {
      padding: 1rem;
    }
  }
</style>
