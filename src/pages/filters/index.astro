---
import { Icon } from 'astro-icon/components';
import BaseLayout from '../../layouts/BaseLayout.astro';
import filtersData from '../../data/filters.json';

const filters = filtersData.filters;
const categories = filtersData.categories;
const lastUpdated = filtersData.lastUpdated;
---

<BaseLayout title="Filters" lastUpdated={lastUpdated} showSidebar showFilters>
  <div class="filters-header">
    <div class="title-with-badges">
      <h1>Open edX Backend Filters</h1>
      <div class="header-badges">
        <span class="badge-stat badge-filters">
          <Icon name="tabler:filter" width="1em" height="1em" />
          {filters.length} Filters
        </span>
        <span class="badge-stat badge-categories">
          <Icon name="tabler:folder" width="1em" height="1em" />
          {categories.length} {categories.length === 1 ? 'Category' : 'Categories'}
        </span>
      </div>
    </div>
    <p class="subtitle">
      Discover all available backend filters in Open edX. Filters allow you to hook into various backend processes and customize behavior without modifying core code.
    </p>
  </div>

  {categories.map((category) => {
    const categoryFilters = filters.filter(f => f.category === category);
    return (
      <div class="category-section">
        <h2>{category.charAt(0).toUpperCase() + category.slice(1).replace("_", " ")} Filters</h2>
        <p class="category-description">
          {category === 'learning' && 'Filters related to course learning experience, enrollment, certificates, and dashboard rendering.'}
          {category === 'content_authoring' && 'Filters related to course content authoring and management.'}
        </p>
        <div class="table-responsive">
          <table class="filters-table" data-searchable="true" data-sortable="true">
            <thead>
              <tr>
                <th>Filter Name</th>
                <th>Description</th>
                <th>Source</th>
              </tr>
            </thead>
            <tbody>
              {categoryFilters.map((filter) => (
                <tr>
                  <td class="filter-name">
                    <a href={`/openedx-plugin-slots-browser/filters/${filter.id}`}>
                      {filter.name}
                    </a>
                    <p class="filter-type">{filter.filterType}</p>
                  </td>
                  <td class="filter-description">
                    {filter.description}
                  </td>
                  <td class="filter-source">
                    <a href={filter.sourceUrl} target="_blank" rel="noopener noreferrer" class="source-link">
                      <Icon name="tabler:external-link" />
                    </a>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
    );
  })}
</BaseLayout>

<style>
  .filters-header {
    margin-bottom: 3rem;
  }

  .title-with-badges {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
    margin-bottom: 1rem;
  }

  .filters-header h1 {
    font-size: 2.5rem;
    margin: 0;
  }

  .header-badges {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .badge-stat {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 600;
    white-space: nowrap;
  }

  .badge-filters {
    background: #e7f1ff;
    color: #0066cc;
  }

  .badge-categories {
    background: #f0e7ff;
    color: #7c3aed;
  }

  .badge-stat :global(svg) {
    width: 1.1em;
    height: 1.1em;
    display: inline;
  }

  .subtitle {
    font-size: 1.1rem;
    color: #666;
    line-height: 1.6;
    max-width: 700px;
  }

  .category-section {
    margin-bottom: 3rem;
  }

  .category-section h2 {
    font-size: 1.8rem;
    margin-bottom: 0.5rem;
    margin-top: 0;
  }

  .category-description {
    color: #666;
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
  }

  .table-responsive {
    overflow-x: auto;
  }

  .filters-table {
    width: 100%;
    border-collapse: collapse;
    background: white;
    border: 1px solid var(--color-border);
    border-radius: 6px;
    overflow: hidden;
  }

  .filters-table thead {
    background: var(--color-primary);
    border-bottom: 3px solid #003d99;
  }

  .filters-table th {
    padding: 0.875rem 1rem;
    text-align: left;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    white-space: nowrap;
    cursor: pointer;
    user-select: none;
    transition: background-color 0.2s ease;
    position: relative;
    background-color: #eee;
  }

  .filters-table th::after {
    content: ' â‡…';
    font-size: 0.75rem;
    opacity: 0.3;
    transition: opacity 0.2s ease;
    margin-left: 0.25rem;
  }

  /* Override simple-datatables button styling */
  :global(.filters-table th button) {
    background: none !important;
    border: none !important;
    font-weight: 600 !important;
    font-size: 0.9rem !important;
    padding: 0 !important;
    cursor: pointer !important;
    font-family: inherit !important;
    text-align: left !important;
    text-transform: uppercase !important;
    letter-spacing: 0.5px !important;
  }

  :global(.filters-table th button::after) {
    display: none !important;
  }

  .filters-table td {
    padding: 0.875rem 1rem;
    border-bottom: 1px solid var(--color-border);
    vertical-align: middle;
  }


  .filters-table tbody tr:last-child td {
    border-bottom: none;
  }

  /* simple-datatables search input styling */
  :global(.datatable-wrapper .datatable-top) {
    padding: 1rem !important;
    background: #fafafa !important;
    border: 1px solid var(--color-border) !important;
    border-bottom: none !important;
    border-radius: 6px 6px 0 0 !important;
    display: flex !important;
    align-items: center !important;
    justify-content: end;
  }

  :global(.datatable-wrapper .datatable-top .datatable-search) {
    margin: 0 !important;
  }

  :global(.datatable-dropdown) {
      display: none;
  }

  :global(.datatable-wrapper .datatable-top input[type="search"]) {
    padding: 0.6rem 1rem !important;
    border: 1px solid var(--color-border) !important;
    border-radius: 4px !important;
    font-size: 0.95rem !important;
    font-family: inherit !important;
    transition: all 0.2s ease !important;
    min-width: 25vw;
  }

  :global(.datatable-wrapper .datatable-top input[type="search"]:focus) {
    outline: none !important;
    border-color: var(--color-primary) !important;
    box-shadow: 0 0 0 3px rgba(0, 102, 204, 0.1) !important;
  }

  :global(.datatable-wrapper .datatable-top input[type="search"]::placeholder) {
    color: #999 !important;
  }

  .filter-name {
    font-weight: 500;
    color: #333;
  }

  .filter-name a {
    color: var(--color-primary);
    text-decoration: none;
    display: block;
    margin-bottom: 0.5rem;
  }

  .filter-name a:hover {
    text-decoration: underline;
  }

  .filter-type {
    background: var(--color-secondary);
    padding: 0.3rem 0.5rem;
    border-radius: 4px;
    font-family: 'Courier New', monospace;
    font-size: 0.75rem;
    color: #555;
    display: inline-block;
    word-break: break-word;
    margin: 0;
  }

  .filter-description {
    color: #666;
    max-width: 300px;
    word-break: break-word;
  }

  .filter-source {
    text-align: center;
  }

  .source-link {
    display: inline-flex;
    align-items: center;
    color: var(--color-primary);
    text-decoration: none;
  }

  .source-link:hover {
    opacity: 0.7;
  }

  .source-link :global(svg) {
    width: 1.2em;
    height: 1.2em;
  }

  @media (max-width: 768px) {
    .title-with-badges {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
    }

    .filters-header h1 {
      font-size: 2rem;
    }

    .filters-table th,
    .filters-table td {
      padding: 0.75rem 0.5rem;
      font-size: 0.9rem;
    }

    .filters-table th {
      font-size: 0.85rem;
    }

    .filter-description {
      font-size: 0.85rem;
      line-height: 1.4;
    }
  }

  @media (max-width: 480px) {
    .filters-table th {
      padding: 0.75rem 0.35rem;
      font-size: 0.75rem;
    }

    .filters-table td {
      padding: 0.6rem 0.35rem;
    }

    .filter-description {
      font-size: 0.75rem;
      line-height: 1.3;
    }
  }
</style>

<script>
      // Initialize all tables with sortable/searchable features
      async function initTables() {
        const { DataTable } = await import('simple-datatables');

        const tables = document.querySelectorAll('.filters-table[data-sortable="true"]');
        tables.forEach(table => {
          new DataTable(table, {
            searchable: true,
            sortable: true,
            perPage: 50,
          });
        });
      }

      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initTables);
      } else {
        initTables();
      }
    </script>
