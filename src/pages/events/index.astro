---
import BaseLayout from '../../layouts/BaseLayout.astro';
import eventsData from '../../data/events.json';
import { Icon } from 'astro-icon/components';
import 'simple-datatables/dist/style.css';

// Group events by namespace
const eventsByNamespace = eventsData.events.reduce(
  (acc, event) => {
    if (!acc[event.namespace]) {
      acc[event.namespace] = [];
    }
    acc[event.namespace].push(event);
    return acc;
  },
  {} as Record<string, typeof eventsData.events>
);

const namespaces = Object.keys(eventsByNamespace).sort();
---

<BaseLayout title="Events" showSidebar showEvents>
  <h1>Open edX Events</h1>
  <p>All OpenEdX event signals from the openedx-events repository ({eventsData.events.length})</p>

  <div class="stats-bar">
    <div class="stat">
      <strong>{eventsData.events.length}</strong>
      <span>Total Events</span>
    </div>
    <div class="stat">
      <strong>{namespaces.length}</strong>
      <span>Domains</span>
    </div>
    <div class="stat">
      <strong>{new Date(eventsData.lastUpdated).toLocaleDateString()}</strong>
      <span>Last Updated</span>
    </div>
  </div>

  {
    namespaces.map((namespace) => (
      <section class="namespace-section" id={namespace}>
         <h2>
           <a href={`#${namespace}`} class="namespace-anchor">
             {namespace.replace(/-/g, ' ').split(' ').map((w) => w.charAt(0).toUpperCase() + w.slice(1)).join(' ')}
           </a>
         </h2>
         <p class="namespace-count">{eventsByNamespace[namespace].length} events</p>

        <table class="events-table" data-namespace={namespace}>
          <thead>
            <tr>
              <th>Event Name</th>
              <th>Description</th>
              <th>Source</th>
            </tr>
          </thead>
          <tbody>
            {eventsByNamespace[namespace].map((event) => (
              <tr>
                <td class="event-name">
                  <a href={`/openedx-plugin-slots-browser/events/${event.id}`}>
                    {event.eventName}
                  </a>
                  <p class="event-type">{event.eventType}</p>
                </td>
                <td class="event-description">{event.description || '-'}</td>
                <td class="event-source">
                  <a href={event.sourceUrl} target="_blank" rel="noopener noreferrer" class="source-link">
                    <Icon name="tabler:external-link" />
                  </a>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
       </section>
    ))
  }
</BaseLayout>

<style>
  h1 {
    margin-bottom: 0.5rem;
  }

  > p {
    color: #666;
    margin-bottom: 2rem;
  }

  .stats-bar {
    display: flex;
    gap: 2rem;
    margin-bottom: 3rem;
    flex-wrap: wrap;
  }

  .stat {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .stat strong {
    font-size: 2rem;
    color: var(--color-primary);
  }

  .stat span {
    font-size: 0.9rem;
    color: #666;
  }

  .namespace-section {
    margin-bottom: 3rem;
  }

  .namespace-section h2 {
    margin-bottom: 0.5rem;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid var(--color-primary);
  }

  .namespace-anchor {
    text-decoration: none;
    color: inherit;
  }

  .namespace-anchor:hover {
    text-decoration: underline;
  }

  .namespace-count {
    color: #999;
    font-size: 0.95rem;
    margin-bottom: 1.5rem;
  }

  .events-table {
    width: 100%;
    border-collapse: collapse;
    border: 1px solid var(--color-border);
    border-radius: 8px;
    overflow: hidden;
    background: white;
  }

  .events-table thead {
    background: #e8e8e8;
    border-bottom: 2px solid var(--color-border);
  }

  .events-table th {
    padding: 1rem;
    text-align: left;
    font-weight: 600;
    color: #333;
    font-size: 0.95rem;
    background: #e8e8e8;
  }

  .events-table tbody tr {
    border-bottom: 1px solid var(--color-border);
    transition: background-color 0.2s ease;
  }

  .events-table tbody tr:hover {
    background-color: #fafafa;
  }

  .events-table tbody tr:last-child {
    border-bottom: none;
  }

  .events-table td {
    padding: 1rem;
    font-size: 0.95rem;
    color: #666;
  }

  .event-name {
    font-weight: 500;
    color: #333;
  }

  .event-name a {
    color: var(--color-primary);
    text-decoration: none;
    display: block;
    margin-bottom: 0.5rem;
  }

  .event-name a:hover {
    text-decoration: underline;
  }

  .event-type {
    background: var(--color-secondary);
    padding: 0.3rem 0.5rem;
    border-radius: 4px;
    font-family: 'Courier New', monospace;
    font-size: 0.75rem;
    color: #555;
    display: inline-block;
    word-break: break-word;
    margin: 0;
  }

  .event-description {
    color: #666;
    max-width: 300px;
    word-break: break-word;
  }

  .event-source {
    text-align: center;
  }

  .source-link {
    display: inline-flex;
    align-items: center;
    color: var(--color-primary);
    text-decoration: none;
  }

  .source-link:hover {
    opacity: 0.7;
  }

  .source-link :global(svg) {
    width: 1.2em;
    height: 1.2em;
  }

  :global(.datatable-top) {
      display: flex;
    justify-content: end;
  }

  :global(.datatable-info) {
    display: none;
  }


</style>

<script>
  import { DataTable } from 'simple-datatables';

  function initializeTables() {
    const tables = document.querySelectorAll('.events-table');
    tables.forEach((table) => {
      new DataTable(table, {
        searchable: true,
        sortable: true,
        perPage: 25,
        perPageSelect: false,
      });
    });
  }

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', initializeTables);

  // Also initialize for client-side navigation
  document.addEventListener('astro:page-load', initializeTables);
</script>
