---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Icon } from 'astro-icon/components';
import pluginData from '../data/plugin-slots.json';
import filterData from '../data/filters.json';
import eventsData from '../data/events.json';

const slotCount = pluginData.pluginSlots.length;
const filterCount = filterData.filters.length;
const eventCount = eventsData.events.length;
const lastUpdated = pluginData.lastUpdated;
const documentedCount = pluginData.pluginSlots.filter((slot) => slot.readmePresent).length;
const examplesCount = pluginData.pluginSlots.filter((slot) => slot.hasExamples).length;
const filterDomains = new Set(filterData.filters.map((filter) => filter.category)).size;
const eventNamespaces = new Set(eventsData.events.map((event) => event.namespace)).size;
---

<BaseLayout title="Home" lastUpdated={lastUpdated}>
  <div class="hero">
    <h1>Open edX Plugins System Catalog</h1>
    <div class="subtitle-block">
      A continuously updated catalog of Open edX frontend plugin slots, backend filters, and events,
      with source links and documentation to help you extend and customize Open edX without
      forking core code.
    </div>

    <div class="cards-grid">
      <div class="data-card">
        <Icon name="tabler:puzzle" class="card-icon icon-red" is:inline />
        <div class="card-stat">
          <div class="stat-number">{slotCount}</div>
          <div class="stat-label">Frontend Plugin Slots</div>
        </div>
        <a href="/openedx-plugin-slots-browser/mfes" class="btn btn-primary">
            Browse MFE Slots <Icon name="tabler:arrow-right" class="btn-icon" />
        </a>
        <div class="card-footer">
          <div class="footer-item">
            <span class="footer-label">With README</span>
            <span class="footer-value">{documentedCount}</span>
          </div>
          <div class="footer-item">
            <span class="footer-label">With Examples</span>
            <span class="footer-value">{examplesCount}</span>
          </div>
        </div>
      </div>

      <div class="data-card">
        <Icon name="tabler:filter-code" class="card-icon icon-green" is:inline />
        <div class="card-stat">
          <div class="stat-number">{filterCount}</div>
          <div class="stat-label">Backend Filters</div>
        </div>
        <a href="/openedx-plugin-slots-browser/filters" class="btn btn-primary">
          Browse Filters  <Icon name="tabler:arrow-right" class="btn-icon" />
        </a>
        <div class="card-footer">
          <div class="footer-item">
            <span class="footer-label">Domains</span>
            <span class="footer-value">{filterDomains}</span>
          </div>
        </div>
      </div>

      <div class="data-card">
        <Icon name="tabler:bell" class="card-icon icon-purple" is:inline />
        <div class="card-stat">
          <div class="stat-number">{eventCount}</div>
          <div class="stat-label">Backend Events</div>
        </div>
        <a href="/openedx-plugin-slots-browser/events" class="btn btn-primary">
          Browse Events  <Icon name="tabler:arrow-right" class="btn-icon" />
        </a>
        <div class="card-footer">
          <div class="footer-item">
            <span class="footer-label">Namespaces</span>
            <span class="footer-value">{eventNamespaces}</span>
          </div>
        </div>
      </div>
    </div>

    <div class="contribute-section">
      <h2>Want to Contribute?</h2>
      <p>Help improve this catalog! Visit the <a href="https://github.com/tecoholic/openedx-plugin-slots-browser" target="_blank">GitHub repository</a> to report issues, suggest features, or submit pull requests.</p>
    </div>
  </div>

</BaseLayout>

<style>
  .hero {
    text-align: center;
    margin: 3rem 0;
  }

  .hero h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .subtitle {
    font-size: 1.2rem;
    color: #666;
    margin-bottom: 3rem;
  }

  .subtitle-block {
    max-width: 720px;
    margin: 0 auto 3rem auto;
    font-size: 1.05rem;
    color: #5a5a5a;
    line-height: 1.7;
  }

  .cards-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin: 3rem auto;
    max-width: 1000px;
  }

  .data-card {
    border: 1px solid var(--color-border);
    border-radius: 10px;
    padding: 2rem;
    text-align: center;
    background: #fff;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    position: relative;
  }

  .card-footer {
    margin-top: auto;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border);
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-item {
    display: flex;
    justify-content: space-between;
    font-size: 0.9rem;
  }

  .footer-label {
    color: #666;
    font-weight: 500;
  }

  .footer-value {
    color: var(--color-primary);
    font-weight: 600;
  }

  .card-icon {
    width: 3rem;
    height: 3rem;
    margin: 0 auto;
  }

  .card-icon.icon-red {
    color: #dd0000;
  }

  .card-icon.icon-green {
    color: #00a650;
  }

  .card-icon.icon-purple {
    color: #7c3aed;
  }

  .card-stat {
    text-align: center;
  }

  .stat-number {
    font-size: 3rem;
    font-weight: bold;
    color: var(--color-primary);
  }

  .stat-label {
    font-size: 1rem;
    color: #666;
    margin-top: 0.5rem;
  }

  .stat-date {
    font-size: 1.1rem;
    font-weight: 500;
  }

  .insights {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1.5rem;
    margin-top: 2.5rem;
  }

  .insight-card {
    border: 1px solid var(--color-border);
    border-radius: 10px;
    padding: 1.5rem;
    text-align: center;
    background: #fff;
  }

  .insight-number {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-primary);
  }

  .insight-label {
    margin-top: 0.5rem;
    font-weight: 600;
    color: #333;
  }

  .insight-subtitle {
    margin-top: 0.35rem;
    font-size: 0.85rem;
    color: #777;
  }

  .btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .btn-primary {
    background: var(--color-primary);
    color: white;
  }

  .btn-primary:hover {
    background: #0052a3;
  }

  .btn-secondary {
    border: 2px solid var(--color-primary);
    color: var(--color-primary);
  }

  .btn-secondary:hover {
    background: #f8f8f8;
  }

  .btn-icon {
      width: 1rem;
      height: 1rem;
      margin-left: 0.5rem;
      vertical-align: middle;
   }

  .contribute-section {
    max-width: 720px;
    margin: 3rem auto 0;
    padding: 1.5rem;
    text-align: center;
  }

  .contribute-section h2 {
    margin: 0 0 0.5rem 0;
    font-size: 1.1rem;
    color: #666;
    font-weight: 500;
  }

  .contribute-section p {
    margin: 0;
    color: #888;
    font-size: 0.95rem;
    line-height: 1.5;
  }

  .contribute-section a {
    color: var(--color-primary);
    text-decoration: none;
  }

  .contribute-section a:hover {
    text-decoration: underline;
  }

  </style>
