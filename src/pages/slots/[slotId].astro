---
import SlotDetailPage from '../../views/SlotDetailPage.astro';
import { getReleaseData } from '../../lib/release-data';
import { withBasePath } from '../../lib/paths';

export function getStaticPaths() {
  const { pluginData } = getReleaseData('main');
  return pluginData.pluginSlots.map((slot) => ({
    params: { slotId: slot.id },
  }));
}

const { slotId } = Astro.params;
const { release, pluginData, filtersData, eventsData } = getReleaseData('main');
const slot = pluginData.pluginSlots.find((s) => s.id === slotId);
const mfe = pluginData.mfes.find((m) => m.id === slot?.mfeId);

if (!slot || !mfe) {
  return Astro.redirect(withBasePath(release.basePath, '/'));
}
---

<SlotDetailPage
  release={release}
  pluginData={pluginData}
  filtersData={filtersData}
  eventsData={eventsData}
  slot={slot}
  mfe={mfe}
/>
