---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Icon } from 'astro-icon/components';
import { getReleaseData } from '../lib/release-data';
import { withBasePath } from '../lib/paths';
import 'simple-datatables/dist/style.css';

interface Props {
  releaseSlug?: string;
}

const { releaseSlug } = Astro.props as Props;
const { release, pluginData, filtersData, eventsData } = getReleaseData(releaseSlug);
const basePath = release.basePath;

const eventsByNamespace = eventsData.events.reduce(
  (acc, event) => {
    if (!acc[event.namespace]) {
      acc[event.namespace] = [];
    }
    acc[event.namespace].push(event);
    return acc;
  },
  {} as Record<string, typeof eventsData.events>
);

Object.keys(eventsByNamespace).forEach((namespace) => {
  eventsByNamespace[namespace].sort((a, b) => a.eventName.localeCompare(b.eventName));
});

const namespaces = Object.keys(eventsByNamespace).sort();
---

<BaseLayout
  title="Events"
  basePath={basePath}
  release={release.slug}
  pluginData={pluginData}
  filtersData={filtersData}
  eventsData={eventsData}
  showSidebar
  showEvents
>
  <section class="space-y-4">
    <div class="flex flex-wrap items-center gap-2">
      <h1 class="text-4xl font-bold">Open edX Events</h1>
      <span class="badge badge-error gap-1 py-3">
        <Icon name="tabler:bell" width="0.95rem" height="0.95rem" is:inline />
        {eventsData.events.length} Events
      </span>
      <span class="badge badge-secondary gap-1 py-3">
        <Icon name="tabler:folder" width="0.95rem" height="0.95rem" />
        {namespaces.length} {namespaces.length === 1 ? 'Domain' : 'Domains'}
      </span>
    </div>
    <p class="max-w-3xl text-base-content/75">All Open edX event signals from the openedx-events repository.</p>
  </section>

  <section class="mt-6 space-y-8">
    {namespaces.map((namespace) => (
      <article class="card border border-base-300 bg-base-100 shadow-sm" id={namespace}>
        <div class="card-body gap-4">
          <div class="flex flex-wrap items-center gap-2">
            <h2 class="card-title text-2xl">
              <a href={`#${namespace}`} class="link link-hover">
                {namespace
                  .replace(/-/g, ' ')
                  .split(' ')
                  .map((word) => word.charAt(0).toUpperCase() + word.slice(1))
                  .join(' ')}
              </a>
            </h2>
            <span class="badge badge-ghost">{eventsByNamespace[namespace].length} events</span>
          </div>

          <div class="overflow-x-auto rounded-box border border-base-300">
            <table class="table table-zebra events-table" data-namespace={namespace}>
              <thead>
                <tr>
                  <th>Event Name</th>
                  <th>Description</th>
                  <th>Source</th>
                </tr>
              </thead>
              <tbody>
                {eventsByNamespace[namespace].map((event) => (
                  <tr>
                    <td class="align-top">
                      <a href={withBasePath(basePath, `/events/${event.id}`)} class="link link-primary block">
                        {event.eventName}
                      </a>
                      <code class="mt-2 inline-block rounded bg-base-200 px-2 py-1 text-xs">{event.eventType}</code>
                    </td>
                    <td class="text-sm text-base-content/80">{event.description || '-'}</td>
                    <td class="text-center">
                      <a href={event.sourceUrl} target="_blank" rel="noopener noreferrer" class="btn btn-ghost btn-xs" aria-label={`View source for ${event.eventName}`}>
                        <Icon name="tabler:external-link" width="0.95rem" height="0.95rem" />
                      </a>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </div>
      </article>
    ))}
  </section>
</BaseLayout>

<script>
  import { DataTable } from 'simple-datatables';

  function initializeTables() {
    const tables = document.querySelectorAll('.events-table');
    tables.forEach((table) => {
      if (table.dataset.initialized === 'true') {
        return;
      }

      table.dataset.initialized = 'true';
      new DataTable(table, {
        searchable: true,
        sortable: true,
        perPage: 25,
        perPageSelect: false,
      });
    });
  }

  document.addEventListener('DOMContentLoaded', initializeTables);
  document.addEventListener('astro:page-load', initializeTables);
</script>
