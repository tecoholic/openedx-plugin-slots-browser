---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import ArgumentsTable from '../components/ArgumentsTable.astro';
import ReturnsTable from '../components/ReturnsTable.astro';
import ExceptionsTable from '../components/ExceptionsTable.astro';
import { withBasePath } from '../lib/paths';

interface Props {
  release: { slug: string; basePath: string };
  pluginData: { pluginSlots: any[]; mfes: any[] };
  filtersData: { filters: any[]; lastUpdated: string };
  eventsData: { events: any[] };
  filter: any;
}

const { release, pluginData, filtersData, eventsData, filter } = Astro.props as Props;
const basePath = release.basePath;
const lastUpdated = filtersData.lastUpdated;
---

<BaseLayout
  title={filter.name}
  basePath={basePath}
  release={release.slug}
  pluginData={pluginData}
  filtersData={filtersData}
  eventsData={eventsData}
  lastUpdated={lastUpdated}
  showSidebar
  showFilters
  currentFilterId={filter.id}
>
  <Breadcrumbs
    items={[
      { label: 'Home', href: withBasePath(basePath, '/') },
      { label: 'Filters', href: withBasePath(basePath, '/filters/') },
      { label: filter.category, href: withBasePath(basePath, `/filters/#${filter.category}`) },
      { label: filter.name, href: '#' },
    ]}
  />

  <section class="space-y-4">
    <div class="space-y-2">
      <h1 class="text-4xl font-bold">{filter.name}</h1>
      <code class="block rounded-box border border-base-300 bg-base-100 p-3 text-sm">{filter.filterType}</code>
      <span class="badge badge-info badge-outline">{filter.category}</span>
    </div>

    <div class="alert border border-primary/20 bg-primary/10 text-base-content">
      <span>{filter.description}</span>
    </div>
  </section>

  <section class="mt-6 grid gap-4 lg:grid-cols-2">
    <article class="card border border-base-300 bg-base-100 shadow-sm">
      <div class="card-body">
        <h3 class="card-title text-lg">Location</h3>
        <p>
          <a href={filter.sourceUrl} target="_blank" rel="noopener noreferrer" class="link link-primary break-all">
            {filter.filePath}
          </a>
        </p>
        <p class="text-sm text-base-content/70">
          Repository:
          <a href={filter.repository} target="_blank" rel="noopener noreferrer" class="link link-primary">openedx-filters</a>
        </p>
      </div>
    </article>

    {filter.trigger && (
      <article class="card border border-base-300 bg-base-100 shadow-sm">
        <div class="card-body">
          <h3 class="card-title text-lg">Trigger Information</h3>
          <div class="space-y-2 text-sm">
            <div>
              <p class="text-xs uppercase tracking-wide text-base-content/60">Repository</p>
              <code class="break-all">{filter.trigger.repository}</code>
            </div>
            <div>
              <p class="text-xs uppercase tracking-wide text-base-content/60">Path</p>
              <code class="break-all">{filter.trigger.path}</code>
            </div>
            <div>
              <p class="text-xs uppercase tracking-wide text-base-content/60">Function</p>
              <code class="break-all">{filter.trigger.function}</code>
            </div>
          </div>
        </div>
      </article>
    )}
  </section>

  <section class="mt-6 space-y-6">
    <ArgumentsTable arguments={filter.arguments} />
    <ReturnsTable returns={filter.returns} />
    <ExceptionsTable exceptions={filter.exceptions} />
  </section>
</BaseLayout>
