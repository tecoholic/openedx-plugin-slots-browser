---
interface FilterReturn {
  type: string;
  description: string;
}

interface Props {
  returns: FilterReturn[];
}

const { returns } = Astro.props;
---

{returns.length > 0 && (
  <section class="space-y-3">
    <h3 class="text-xl font-semibold">Return Values</h3>
    <div class="overflow-x-auto rounded-box border border-base-300 bg-base-100">
      <table class="table table-zebra">
        <thead>
          <tr>
            <th>Type</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
          {returns.map((ret) => (
            <tr>
              <td><code>{ret.type}</code></td>
              <td>{ret.description}</td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </section>
)}
