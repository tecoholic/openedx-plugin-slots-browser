---
import pluginData from '../data/plugin-slots.json';
import { Icon } from 'astro-icon/components';

export interface Props {
  currentMfeId?: string;
  currentSlotId?: string;
}

const { currentMfeId, currentSlotId } = Astro.props;
---

<aside class="sidebar">
  <nav class="tree-nav">
    <div class="tree-section">
      <h3 class="tree-title">Frontend Apps</h3>
      <ul class="tree-list">
        {
          pluginData.mfes.map((mfe) => {
            const mfeSlots = pluginData.pluginSlots.filter(s => s.mfeId === mfe.id);
            const isActive = currentMfeId === mfe.id;

            return (
              <li class={`tree-item ${isActive ? 'active' : ''}`}>
                <details open={isActive}>
                  <summary class="tree-toggle">
                    <a href={`/openedx-plugin-slots-browser/mfes/${mfe.id}`}>
                      <span class="mfe-name">{mfe.name}</span>
                      <span class="slot-badge">{mfeSlots.length}</span>
                    </a>
                  </summary>
                  {mfeSlots.length > 0 && (
                    <ul class="tree-sublist">
                      {mfeSlots.map((slot) => (
                        <li class={`tree-subitem ${currentSlotId === slot.id ? 'active' : ''}`}>
                          <a href={`/openedx-plugin-slots-browser/slots/${slot.id}`}>
                            <span class="slot-name">{slot.id}</span>
                            {!slot.readmePresent && (
                              <Icon name="tabler:alert-circle" class="readme-missing-indicator" title="README missing" />
                            )}
                          </a>
                        </li>
                      ))}
                    </ul>
                  )}
                </details>
              </li>
            );
          })
        }
      </ul>
    </div>
  </nav>
</aside>

<style>
  .sidebar {
    width: 340px;
    background: #f8f9fa;
    border-right: 1px solid var(--color-border);
    padding: 1rem 0;
    max-height: calc(100vh - 60px);
    overflow-y: auto;
    position: sticky;
    top: 60px;
  }

  @media (max-width: 786px) {
      .sidebar {
          display: none;
      }

  }

  .tree-nav {
    padding: 0 0.75rem;
  }

  .tree-section {
    margin-bottom: 1.5rem;
    width: 100%;
  }

  .tree-title {
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    color: #666;
    padding: 0 0.75rem 0.75rem 0;
    margin: 0;
    letter-spacing: 0.5px;
  }

  .tree-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .tree-item {
    margin: 0;
  }

  .tree-toggle {
    display: flex;
    align-items: center;
    cursor: pointer;
    user-select: none;
    padding: 0.4rem 0.5rem;
    margin: 0;
    border-radius: 4px;
    transition: background-color 0.2s ease;
  }

  .tree-toggle:hover {
    background-color: rgba(0, 102, 204, 0.05);
  }

  .tree-item.active > details > summary {
    background-color: rgba(0, 102, 204, 0.1);
  }

  .tree-item a {
    color: #333;
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.5rem;
    width: 100%;
    min-width: 0;
  }

  .tree-item a:hover {
    color: var(--color-primary);
    text-decoration: none;
  }

  .mfe-name {
    flex: 1;
    font-weight: 500;
    font-size: 0.95rem;
    min-width: 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .slot-badge {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: var(--color-primary);
    color: white;
    padding: 0.15rem 0.5rem;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 600;
    flex-shrink: 0;
    white-space: nowrap;
  }

  .tree-sublist {
    list-style: none;
    padding: 0.3rem 0 0.3rem 1.2rem;
    margin: 0.15rem 0 0 0;
    border-left: 2px solid #ddd;
    margin-left: 0.5rem;
  }

  .tree-subitem {
    margin: 0;
    padding: 0;
  }

  .tree-subitem a {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.35rem 0.4rem;
    font-size: 0.8rem;
    color: #666;
    text-decoration: none;
    border-radius: 3px;
    transition: all 0.2s ease;
  }

  .slot-name {
    flex: 1;
    min-width: 0;
    word-break: break-word;
    overflow-wrap: break-word;
  }

  .readme-missing-indicator {
    flex-shrink: 0;
    width: 1em;
    height: 1em;
    color: #d9534f;
    font-weight: bold;
  }

  .tree-subitem a:hover {
    background-color: rgba(0, 102, 204, 0.05);
    color: var(--color-primary);
  }

  .tree-subitem.active a {
    background-color: rgba(0, 102, 204, 0.15);
    color: var(--color-primary);
    font-weight: 500;
  }

  /* Scrollbar styling */
  .sidebar::-webkit-scrollbar {
    width: 6px;
  }

  .sidebar::-webkit-scrollbar-track {
    background: transparent;
  }

  .sidebar::-webkit-scrollbar-thumb {
    background: #ccc;
    border-radius: 3px;
  }

  .sidebar::-webkit-scrollbar-thumb:hover {
    background: #999;
  }

  /* Details disclosure triangle styling */
  details > summary::before {
    content: 'â–¶';
    display: inline-block;
    margin-right: 0.5rem;
    transition: transform 0.2s ease;
    font-size: 0.7rem;
    color: #999;
  }

  details[open] > summary::before {
    transform: rotate(90deg);
  }

  @media (max-width: 768px) {
    .sidebar {
      width: 100%;
      max-height: auto;
      border-right: none;
      border-bottom: 1px solid var(--color-border);
      position: static;
      overflow-y: visible;
    }

    .tree-sublist {
      padding-left: 1rem;
      margin-left: 0.5rem;
    }
  }
</style>

<script>
  // Store expanded state in localStorage
  document.addEventListener('DOMContentLoaded', () => {
    const details = document.querySelectorAll('.tree-item details');

    details.forEach((detail) => {
      const summary = detail.querySelector('summary');
      const mfeName = summary?.textContent?.trim() || '';
      const storageKey = `sidebar-expanded-${mfeName}`;

      // Restore saved state
      const wasExpanded = localStorage.getItem(storageKey) === 'true';
      if (wasExpanded && !detail.open) {
        detail.open = true;
      }

      // Save state on toggle
      detail.addEventListener('toggle', () => {
        localStorage.setItem(storageKey, detail.open ? 'true' : 'false');
      });
    });
  });
</script>
