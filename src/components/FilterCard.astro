---
interface Filter {
  id: string;
  filterType: string;
  name: string;
  category: string;
  description: string;
}

interface Props {
  filter: Filter;
  basePath: string;
}

const { filter, basePath } = Astro.props;
const detailUrl = `${basePath}/filters/${filter.id}`;
---

<div class="card border border-base-300 bg-base-100 shadow-sm transition hover:-translate-y-0.5 hover:shadow-md">
  <div class="card-body gap-3">
    <div class="flex items-start justify-between gap-3">
      <h3 class="card-title text-lg leading-tight">
        <a href={detailUrl} class="link link-primary link-hover">{filter.name}</a>
      </h3>
      <span class="badge badge-info badge-outline">{filter.category}</span>
    </div>
    <code class="rounded bg-base-200 px-2 py-1 text-xs">{filter.filterType}</code>
    <p class="text-sm text-base-content/80">{filter.description}</p>
    <div class="card-actions justify-end">
      <a href={detailUrl} class="btn btn-ghost btn-sm text-primary">View Details</a>
    </div>
  </div>
</div>
