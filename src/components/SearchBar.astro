---
import { Icon } from 'astro-icon/components';
import { withBasePath } from '../lib/paths';

interface Props {
  pluginData: { pluginSlots: any[] };
  filtersData: { filters: any[] };
  eventsData: { events: any[] };
  basePath: string;
}

const { pluginData, filtersData, eventsData, basePath } = Astro.props as Props;

const searchData = [
  ...pluginData.pluginSlots.map((slot: any) => ({
    type: 'slot',
    id: slot.id,
    name: slot.id,
    category: `${slot.mfeName} MFE`,
    description: slot.description,
    url: `${withBasePath(basePath, `/mfes/${slot.mfeId}`)}#${slot.id}`,
  })),
  ...filtersData.filters.map((filter: any) => ({
    type: 'filter',
    id: filter.id,
    name: filter.name,
    description: filter.description,
    category: filter.category,
    filterType: filter.filterType,
    url: withBasePath(basePath, `/filters/${filter.id}`),
  })),
  ...eventsData.events.map((event: any) => ({
    type: 'event',
    id: event.id,
    name: event.eventName,
    description: event.description,
    category: event.namespace,
    url: withBasePath(basePath, `/events/${event.id}`),
  })),
];

const searchDataJson = JSON.stringify(searchData);
---

<div class="relative w-full">
  <label class="input input-bordered flex w-full items-center gap-2 rounded-box">
    <Icon name="tabler:search" width="1rem" height="1rem" class="text-base-content/70" is:inline />
    <input
      type="text"
      id="search-input"
      class="grow"
      placeholder="Search plugins, filters, slots..."
      aria-label="Search"
    />
    <span class="hidden items-center gap-1 text-xs text-base-content/60 sm:flex">
      <kbd class="kbd kbd-xs">Ctrl</kbd>
      <kbd class="kbd kbd-xs">K</kbd>
    </span>
  </label>
  <div id="search-results" class="absolute left-0 right-0 top-full z-40 mt-2 hidden rounded-box border border-base-300 bg-base-100 p-1 shadow-xl"></div>
</div>

<template id="icon-slot">
  <Icon name="tabler:puzzle" class="result-icon" is:inline />
</template>
<template id="icon-filter">
  <Icon name="tabler:filter-code" class="result-icon" is:inline />
</template>
<template id="icon-event">
  <Icon name="tabler:bell" class="result-icon" is:inline />
</template>

<style is:global>
  .search-result-item {
    display: block;
    border-radius: 0.7rem;
    padding: 0.6rem 0.7rem;
    text-decoration: none;
  }

  .search-result-item:hover {
    background: color-mix(in oklab, var(--color-primary) 12%, transparent);
  }

  .search-result-head {
    display: flex;
    align-items: center;
    gap: 0.45rem;
    margin-bottom: 0.2rem;
  }

  .search-result-title {
    color: var(--color-primary);
    font-weight: 600;
    font-size: 0.9rem;
  }

  .search-result-type {
    font-size: 0.77rem;
    color: color-mix(in oklab, var(--color-base-content) 70%, transparent);
  }

  .search-result-description {
    margin-top: 0.15rem;
    font-size: 0.77rem;
    color: color-mix(in oklab, var(--color-base-content) 62%, transparent);
    line-height: 1.35;
  }

  .result-icon {
    width: 0.95rem;
    height: 0.95rem;
    color: var(--color-primary);
  }
</style>

<script define:vars={{ searchDataJson }}>
  const searchData = JSON.parse(searchDataJson);
  const searchInput = document.getElementById('search-input');
  const resultsContainer = document.getElementById('search-results');

  function fuzzyMatch(query, text) {
    const queryLower = query.toLowerCase();
    const textLower = text.toLowerCase();
    let queryIdx = 0;

    for (let i = 0; i < textLower.length && queryIdx < queryLower.length; i++) {
      if (textLower[i] === queryLower[queryIdx]) {
        queryIdx++;
      }
    }

    return queryIdx === queryLower.length;
  }

  function scoreResults(item, query) {
    const queryLower = query.toLowerCase();
    let score = 0;

    if (item.name.toLowerCase() === queryLower) {
      score += 1000;
    } else if (item.name.toLowerCase().includes(queryLower)) {
      score += 500;
    } else if (fuzzyMatch(query, item.name)) {
      score += 300;
    }

    if (item.description && item.description.toLowerCase().includes(queryLower)) {
      score += 100;
    } else if (item.description && fuzzyMatch(query, item.description)) {
      score += 50;
    }

    if (item.category && item.category.toLowerCase().includes(queryLower)) {
      score += 25;
    }

    return { ...item, score };
  }

  function performSearch(query) {
    if (!query.trim()) {
      resultsContainer.classList.add('hidden');
      resultsContainer.innerHTML = '';
      return;
    }

    const results = searchData
      .filter((item) => {
        const searchText = `${item.name} ${item.description || ''} ${item.category || ''} ${item.filterType || ''}`;
        return fuzzyMatch(query, searchText);
      })
      .map((item) => scoreResults(item, query))
      .sort((a, b) => b.score - a.score)
      .slice(0, 10);

    if (results.length === 0) {
      resultsContainer.innerHTML = '<div class="px-3 py-2 text-sm text-base-content/70">No results found</div>';
      resultsContainer.classList.remove('hidden');
      return;
    }

    resultsContainer.innerHTML = results
      .map((item) => {
        let iconTemplate = '';
        if (item.type === 'slot') {
          iconTemplate = document.getElementById('icon-slot').innerHTML;
        } else if (item.type === 'filter') {
          iconTemplate = document.getElementById('icon-filter').innerHTML;
        } else if (item.type === 'event') {
          iconTemplate = document.getElementById('icon-event').innerHTML;
        }

        return `
          <a class="search-result-item" href="${item.url}">
            <div class="search-result-head">
              ${iconTemplate}
              <div class="search-result-title">${item.name}</div>
            </div>
            <div class="search-result-type">${item.category || ''}</div>
            ${item.description ? `<div class="search-result-description">${item.description.slice(0, 80)}${item.description.length > 80 ? '...' : ''}</div>` : ''}
          </a>
        `;
      })
      .join('');

    resultsContainer.classList.remove('hidden');
  }

  searchInput?.addEventListener('input', (e) => {
    performSearch(e.target.value);
  });

  document.addEventListener('click', (e) => {
    if (!searchInput?.contains(e.target) && !resultsContainer?.contains(e.target)) {
      resultsContainer?.classList.add('hidden');
    }
  });

  document.addEventListener('keydown', (e) => {
    if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
      e.preventDefault();
      searchInput?.focus();
      searchInput?.select();
    }
  });
</script>
