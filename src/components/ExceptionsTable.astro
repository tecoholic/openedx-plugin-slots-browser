---
interface FilterException {
  name: string;
  description: string;
}

interface Props {
  exceptions: FilterException[];
}

const { exceptions } = Astro.props;
---

{exceptions.length > 0 && (
  <div class="exceptions-section">
    <h3>Exceptions</h3>
    <div class="exceptions-list">
      {exceptions.map((exc) => (
        <div class="exception-item">
          <div class="exception-name">
            <code>{exc.name}</code>
          </div>
          <div class="exception-description">{exc.description}</div>
        </div>
      ))}
    </div>
  </div>
)}

<style>
  .exceptions-section {
    margin: 2rem 0;
  }

  .exceptions-section h3 {
    margin-top: 0;
    font-size: 1.3rem;
    margin-bottom: 1rem;
  }

  .exceptions-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .exception-item {
    border: 1px solid var(--color-border);
    border-radius: 6px;
    padding: 1.25rem;
    background: #fafafa;
  }

  .exception-name {
    margin-bottom: 0.5rem;
  }

  .exception-name code {
    background: #f0f0f0;
    padding: 0.35rem 0.65rem;
    border-radius: 3px;
    font-family: 'Monaco', 'Menlo', 'Courier New', monospace;
    font-size: 0.95rem;
    color: #d73a49;
    font-weight: 600;
  }

  .exception-description {
    color: #555;
    font-size: 0.95rem;
    line-height: 1.5;
    margin: 0;
  }

  @media (max-width: 768px) {
    .exception-item {
      padding: 1rem;
    }

    .exception-name code {
      font-size: 0.85rem;
    }
  }
</style>
