---
interface FilterException {
  name: string;
  description: string;
}

interface Props {
  exceptions: FilterException[];
}

const { exceptions } = Astro.props;
---

{exceptions.length > 0 && (
  <section class="space-y-3">
    <h3 class="text-xl font-semibold">Exceptions</h3>
    <div class="space-y-3">
      {exceptions.map((exc) => (
        <article class="rounded-box border border-error/30 bg-error/5 p-4">
          <h4 class="mb-2 font-semibold text-error"><code>{exc.name}</code></h4>
          <p class="text-sm text-base-content/80">{exc.description}</p>
        </article>
      ))}
    </div>
  </section>
)}
