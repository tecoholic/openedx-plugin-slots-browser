---
export type BreadcrumbItem = {
  label: string;
  href?: string;
};

import { Icon } from 'astro-icon/components';

const { items } = Astro.props as { items: BreadcrumbItem[] };
const lastIndex = items.length - 1;
---

<div class="breadcrumbs mb-4 text-sm">
  <ul>
    {items.map((item, index) => (
      <li>
        {item.href && index < lastIndex ? (
          <a href={item.href} class="inline-flex items-center gap-1 text-primary">
            <Icon name="tabler:folder" width="0.95rem" height="0.95rem" is:inline />
            {item.label}
          </a>
        ) : (
          <span class="font-medium text-base-content/80" aria-current="page">{item.label}</span>
        )}
      </li>
    ))}
  </ul>
</div>
