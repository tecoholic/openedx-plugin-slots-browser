---
interface FilterArgument {
  name: string;
  type: string;
  description: string;
}

interface Props {
  arguments: FilterArgument[];
}

const { arguments: args } = Astro.props;
---

{args.length > 0 && (
  <section class="space-y-3">
    <h3 class="text-xl font-semibold">Arguments</h3>
    <div class="overflow-x-auto rounded-box border border-base-300 bg-base-100">
      <table class="table table-zebra">
        <thead>
          <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
          {args.map((arg) => (
            <tr>
              <td><code>{arg.name}</code></td>
              <td><code>{arg.type}</code></td>
              <td>{arg.description}</td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </section>
)}
